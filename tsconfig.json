{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@images/*": [
        "src/assets/images/*"
      ],
      "@icons/*": [
        "src/assets/images/icons/*"
      ],
      "@videos/*": [
        "src/assets/videos/*"
      ],
      "@fonts/*": [
        "src/assets/fonts/*"
      ],
      "@utils": [
        "src/common/utils.ts"
      ],
      "@interfaces": [
        "src/common/interfaces/index.ts"
      ],
      "@config": [
        "src/common/config.ts"
      ],
      "@schemas": [
        "src/common/schemas/index.ts"
      ],
      "@services": [
        "src/common/services/index.ts"
      ],
      "@components": [
        "src/components/index.ts"
      ],
      "@containers": [
        "src/containers/index.ts"
      ],
      "@context": [
        "src/context/index.ts"
      ],
      "@hooks": [
        "src/hooks/index.ts"
      ],
      "@hoc": [
        "src/hoc/index.ts"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@stylesComponents/*": [
        "src/styles/components/*"
      ],
      "@stylesPages/*": [
        "src/styles/pages/*"
      ],
      "@styles": [
        "src/styles/Globals.scss"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}

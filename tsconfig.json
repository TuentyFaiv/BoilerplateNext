{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@images/*": [
        "app/assets/images/*"
      ],
      "@icons/*": [
        "app/assets/images/icons/*"
      ],
      "@videos/*": [
        "app/assets/videos/*"
      ],
      "@schemas": [
        "app/common/schemas/index.ts"
      ],
      "@services": [
        "app/common/services/index.ts"
      ],
      "@typing/*": [
        "app/common/typing/*"
      ],
      "@utils/*": [
        "app/common/utils/*"
      ],
      "@config": [
        "app/common/config.ts"
      ],
      "@components": [
        "app/components/index.ts"
      ],
      "@hoc": [
        "app/hoc/index.ts"
      ],
      "@hooks": [
        "app/hooks/index.ts"
      ],
      "@styles": [
        "app/styles/index.ts"
      ],
      "@cstyles": [
        "app/styles/components/index.ts"
      ],
      "@pstyles": [
        "app/styles/pages/index.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}